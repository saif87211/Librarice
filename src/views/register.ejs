<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="style.css">
    <title>Register</title>
</head>

<body class="split-background">
    <div class="d-flex min-vh-100 flex-row align-items-center justify-content-center">
        <main class="container">
            <div class="row justify-content-center">
                <div class="col-md-6">
                    <div class="card px-3 rounded-0 shadow border border-3">
                        <!-- REGISTER -->
                        <form id="register-form" method="post" action="register" class="card-body needs-validation"
                            novalidate>
                            <h2 class="card-title text-decoration-underline text-center">Register</h2>
                            <p class="card-text">Create your account</p>

                            <!-- NAME FIELD -->
                            <div class="form-floating mb-3">
                                <input id="fullname" name="fullname" class="form-control rounded-0 shadow shadow" type="text"
                                    placeholder="fullname" required />
                                <label for="name">Full Name</label>
                                <div class="invalid-feedback">Name is required.</div>
                            </div>

                            <!-- USERNAME FIELD -->
                            <div class="form-floating mb-3">
                                <input id="username" name="username" class="form-control rounded-0 shadow" type="text"
                                    placeholder="Username" required />
                                <label for="username">Username</label>
                                <div class="invalid-feedback">Username is required.</div>
                            </div>

                            <!-- EMAIL FIELD -->
                            <div class="form-floating mb-3">
                                <input id="email" name="email" type="text" pattern="^[^@]+@[^@]+\.[^@]+$" class="form-control rounded-0 shadow"
                                    placeholder="Email" required />
                                <label for="email">Email</label>
                                <div class="invalid-feedback">Email id is required.</div>
                            </div>

                            <!-- PASSWORD FIELD -->
                            <div class="form-floating mb-3">
                                <input id="password" name="password" type="password" class="form-control rounded-0 shadow" placeholder="Password"
                                    pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[a-zA-Z]).{8,}$" required />
                                <span><i id="toggler" class="bi bi-eye-fill"></i></span>
                                <label for="password">Password</label>
                                <div class="invalid-feedback">
                                    <ul>
                                        <p class="m-0">Pssword must be 8 character long. Contains</p>
                                        <li>1 special character</li>
                                        <li>1 Uppercase letter</li>
                                        <li>1 Lowercase letter</li>
                                        <li>1 number</li>
                                    </ul>
                                </div>
                            </div>

                            <!-- SUBMIT BUTTON -->
                            <div class="d-grid gap-2 my-4">
                                <button id="submit-btn" class="btn btn-primary rounded-0 d-flex justify-content-center"
                                    type="submit">Register</button>
                            </div>
                            <a href="/login" class="d-block card-link">Already registerd? Login</a>
                        </form>
                    </div>
                </div>
            </div>
        </main>
    </div>
    <% const {data} = apiResponse;  %>
    <% if(data.alert){%>
        <!--- SWEET ALERT --->
        <template id="alert-template">
            <swal-title><%=data.title%></swal-title>
            <swal-html><p><%=data.message%></p></swal-html>
           <swal-icon type="<%=(apiResponse.success)?'success':'error'%>"></swal-icon>
            <swal-button type="confirm">Okay</swal-button>
        </template>
        <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
        <script>
            Swal.fire({
                template: "#alert-template"
            });
        </script>
        <!--- SWEET ALERT --->
    <%}%>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js"
        integrity="sha384-0pUGZvbkm6XF6gxjEnlmuGrJXVbNuzT9qBBavbLwCsOGabYfZo0T0to5eqruptLy"
        crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js"
        integrity="sha512-v2CJ7UaYy4JwqLDIrZUI/4hqeoQieOmAZNXBeQyjo21dadnwR+8ZaIJVT8EE2iyI61OV8e6M8PP2/4hpQINQ/g=="
        crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <script src="script.js"></script>
</body>

</html>