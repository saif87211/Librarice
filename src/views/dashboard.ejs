<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard</title>
    <!-- BOOTSTRAP CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <!-- BOOTSTRAP ICONS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <!-- DATATABLES CSS -->
    <link rel="stylesheet" href="https://cdn.datatables.net/responsive/3.0.2/css/responsive.bootstrap.min.css">
    <link rel="stylesheet" href="https://cdn.datatables.net/2.1.4/css/dataTables.dataTables.css" />
    <link rel="stylesheet" href="style.css">
</head>

<body>
    <!-- HEADER STARTS -->
    <header class="navbar sticky-top bg-body-tertiary fixed-top border-bottom shadow-sm py-1">
        <div class="container-fluid">
            <div class="d-flex align-content-center">
                <a class="btn border-0 navbar-toggler fs-6" type="button" data-bs-toggle="offcanvas"
                    data-bs-target="#sidebar" aria-controls="sidebar" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </a>
                <span class="fw-bold fs-6 pt-1">Dashboard</span>
            </div>
            <div class="navbar-brand">
                <div class="dropdown">
                    <a href="#" class="d-block link-body-emphasis text-decoration-none dropdown-toggle"
                        data-bs-toggle="dropdown" aria-expanded="false">
                        <img src="https://github.com/mdo.png" alt="mdo" width="32" height="32" class="rounded-circle">
                    </a>
                    <ul class="dropdown-menu dropdown-menu-end shadow">
                        <li><a class="dropdown-item" href="#">Settings</a></li>
                        <li><a class="dropdown-item" href="#">Profile</a></li>
                        <li><a class="dropdown-item" href="#">Change Password</a></li>
                        <li>
                            <hr class="dropdown-divider">
                        </li>
                        <li><a class="dropdown-item" href="#">Sign out</a></li>
                    </ul>
                </div>
            </div>

            <!-- SIDEBAR START -->
            <nav class="offcanvas offcanvas-start" tabindex="-1" id="sidebar" aria-labelledby="sidebarcanvas">
                <!-- SIDEBAR HEADER START -->
                <div class="offcanvas-header border-bottom py-2 border-1">
                    <h5 class="offcanvas-title" id="sidebarcanvas">
                        <span class="bi bi-book"></span>
                        <span>Library</span>
                    </h5>
                    <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
                </div>
                <!-- SIDEBAR HEADER END -->
                <!-- SIDEBAR BODY START -->
                <div class="offcanvas-body p-0">
                    <div id="usermenu" class="accordion accordion-flush my-2">
                        <!-- DASHBOARD -->
                        <a href="#"
                            class="dashboard-menu hover-item d-flex align-items-center justify-content-between border-top border-bottom mt-1 mb-3 link-body-emphasis text-decoration-none">
                            <div class="fw-bold">
                                <i class="bi bi-display"></i>
                                <span>Dashboard</span>
                            </div>
                            <i class="bi bi-chevron-right fs-5"></i>
                        </a>
                        <!-- USER -->
                        <div class="accordion-item">
                            <h2 class="accordion-header">
                                <button class="accordion-button collapsed fw-bold shadow-none" type="button"
                                    data-bs-toggle="collapse" data-bs-target="#usercollapse" aria-expanded="false"
                                    aria-controls="usercollapse">
                                    <i class="bi bi-person"></i>
                                    <span class="ps-1">Users</span>
                                </button>
                            </h2>

                            <div id="usercollapse" class="accordion-collapse collapse" data-bs-parent="#usermenu">
                                <div class="accordion-body p-0">
                                    <div class="list-group fs-7">
                                        <a href="#" class="list-group-item hover-item">Insert User</a>
                                        <a href="#" class="list-group-item hover-item">Update User</a>
                                        <a href="#" class="list-group-item hover-item">Delete User</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- BOOKS -->
                        <div class="accordion-item">
                            <h2 class="accordion-header">
                                <button class="accordion-button collapsed fw-bold shadow-none" type="button"
                                    data-bs-toggle="collapse" data-bs-target="#bookcollapse" aria-expanded="false"
                                    aria-controls="bookcollapse">
                                    <i class="bi bi-book"></i>
                                    <span class="ps-1">Book</span>
                                </button>
                            </h2>

                            <div id="bookcollapse" class="accordion-collapse collapse" data-bs-parent="#usermenu">
                                <div class="accordion-body p-0">
                                    <div class="list-group fs-7">
                                        <a href="#" class="list-group-item hover-item">Insert Book</a>
                                        <a href="#" class="list-group-item hover-item">Update Book</a>
                                        <a href="#" class="list-group-item hover-item">Delete Book</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- STUDETS -->
                        <div class="accordion-item border-bottom">
                            <h2 class="accordion-header">
                                <button class="accordion-button collapsed fw-bold shadow-none" type="button"
                                    data-bs-toggle="collapse" data-bs-target="#studentcollapse" aria-expanded="false"
                                    aria-controls="studentcollapse">
                                    <i class="bi bi-person-vcard"></i>
                                    <span class="ps-1">Students</span>
                                </button>
                            </h2>

                            <div id="studentcollapse" class="accordion-collapse collapse" data-bs-parent="#usermenu">
                                <div class="accordion-body p-0">
                                    <div class="list-group fs-7">
                                        <a href="#" class="list-group-item hover-item">Insert Student</a>
                                        <a href="#" class="list-group-item hover-item">Update Student</a>
                                        <a href="#" class="list-group-item hover-item">Delete Student</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- SIDEBAR BODY START -->

            </nav>
            <!-- SIDEBAR START -->
        </div>
    </header>
    <!-- HEADER ENDS -->

    <!-- MAIN STARTS -->
    <main class="split-background">
        <div class="container">
            <!-- BOOKS COUNT STARTS-->
            <div class="row">
                <div class="col">
                    <div class="card bg-body-tertiary border-0 my-3">
                        <div class="card-title border-bottom border-2 fw-bold ps-3 py-2">
                            Books
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <!-- CARD STARTS-->
                                <div class="col-lg-3 mb-xl-0 mb-2">
                                    <div class="card border-primary text-dark shadow">
                                        <div class="card-body p-3">
                                            <div class="row">
                                                <div class="col-8">
                                                    <div class="numbers">
                                                        <div class="text-sm mb-0 text-uppercase font-weight-bold">
                                                            Total Books
                                                        </div>
                                                        <h5 class="fw-bolder">53000</h5>
                                                    </div>
                                                </div>
                                                <div class="col-4 text-end">
                                                    <div class="text-center rounded-circle">
                                                        <div class="icon icon-shape bg-primary">
                                                            <i class="text-white bi bi-book fs-4"></i>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <!-- CARD ENDS-->
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- BOOKS COUNT ENDS-->
            <!-- STUDENTS COUNT STARTS-->
            <div class="row">
                <div class="col">
                    <div class="card bg-white border-0 my-3">
                        <div class="card-title border-bottom border-2 fw-bold ps-3 py-2">
                            Students
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <!-- CARD STARTS-->
                                <div class="col-lg-3 mb-xl-0 mb-2">
                                    <div class="card border-primary shadow">
                                        <div class="card-body p-3">
                                            <div class="row">
                                                <div class="col-8">
                                                    <div class="numbers">
                                                        <div class="text-sm mb-0 text-uppercase font-weight-bold">
                                                            Total Students
                                                        </div>
                                                        <h5 class="fw-bolder">450</h5>
                                                    </div>
                                                </div>
                                                <div class="col-4 text-end">
                                                    <div class="icon icon-shape bg-primary text-center rounded-circle">
                                                        <i class="text-white bi bi-people fs-4"></i>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <!-- CARD ENDS-->
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- STUDENTS COUNT ENDS-->
            <!-- CHART STARTS -->
            <div class="row">
                <div class="col">
                    <div class="card bg-white border-0 my-3">
                        <div class="card-title border-bottom border-2 fw-bold ps-3 py-2">
                            Charts
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <!-- CHART STARTS -->
                                <div class="col-sm-12 col-md-6">
                                    <div class="card p-3 shadow">
                                        <div class="card-header bg-white">
                                            Weekly Chart
                                        </div>
                                        <canvas id="weekchart"></canvas>
                                    </div>
                                </div>
                                <!-- CHART ENDS -->
                                <!-- CHART STARTS -->
                                <div class="col-sm-12 col-md-6">
                                    <div class="card p-3 shadow">
                                        <div class="card-header bg-white">
                                            Weekly Chart
                                        </div>
                                        <canvas id="bookchart"></canvas>
                                    </div>
                                </div>
                                <!-- CHART ENDS -->
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- CHART ENDS -->
            <!-- TABLE STARTS -->
            <div class="row">
                <div class="col">
                    <div class="card p-3 bg-white border-0 my-3">
                        <table id="myTable" class="table table-striped">
                            <thead>
                                <tr>
                                    <th>Column 1</th>
                                    <th>Column 1</th>
                                    <th>Column 2</th>
                                    <th>Column 2</th>
                                    <th>Column 2</th>
                                    <th>Column 2</th>
                                    <th>Column 2</th>
                                    <th>Column 2</th>
                                    <th>Column 2</th>
                                    <th>Column 2</th>
                                    <th>Column 2</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>Row 1 Data 1</td>
                                    <td>Row 1 Data 1</td>
                                    <td>Row 1 Data 1</td>
                                    <td>Row 1 Data 1</td>
                                    <td>Row 1 Data 1</td>
                                    <td>Row 1 Data 1</td>
                                    <td>Row 1 Data 1</td>
                                    <td>Row 1 Data 2</td>
                                    <td>Row 1 Data 2</td>
                                    <td>Row 1 Data 2</td>
                                    <td>Row 1 Data 2</td>
                                </tr>
                                <tr>
                                    <td>Row 2 Data 1</td>
                                    <td>Row 2 Data 1</td>
                                    <td>Row 2 Data 1</td>
                                    <td>Row 2 Data 1</td>
                                    <td>Row 2 Data 1</td>
                                    <td>Row 2 Data 1</td>
                                    <td>Row 2 Data 1</td>
                                    <td>Row 2 Data 2</td>
                                    <td>Row 2 Data 2</td>
                                    <td>Row 2 Data 2</td>
                                    <td>Row 2 Data 2</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <!-- TABLE ENDS -->
        </div>
    </main>
    <!-- MAIN ENDS -->

    <!-- FOOTER STARTS -->
    <footer class="container">
        <div class="py-2 mt-4 border-top">
            <p class="text-center py-1 text-body-secondary">© 2024 Company, Inc</p>
        </div>
    </footer>
    <!-- FOOTER ENDS -->
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js"
        integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r"
        crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js"
        integrity="sha384-0pUGZvbkm6XF6gxjEnlmuGrJXVbNuzT9qBBavbLwCsOGabYfZo0T0to5eqruptLy"
        crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js"
        integrity="sha512-v2CJ7UaYy4JwqLDIrZUI/4hqeoQieOmAZNXBeQyjo21dadnwR+8ZaIJVT8EE2iyI61OV8e6M8PP2/4hpQINQ/g=="
        crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <script src="https://cdn.datatables.net/2.1.4/js/dataTables.js"></script>
    <script src="https://cdn.datatables.net/responsive/3.0.2/js/dataTables.responsive.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="script.js"></script>
</body>

</html>