<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard</title>
    <%-include("./partials/styles")%>
</head>

<body>
    <%-include("partials/header",{page:"Dashboard"})%>

    <!-- MAIN STARTS -->
    <main class="split-background">
        <div class="container">
            <!-- BOOKS COUNT STARTS-->
            <div class="row">
                <div class="col">
                    <div class="card bg-body-tertiary border-0 my-3">
                        <div class="card-title border-bottom border-2 fw-bold ps-3 py-2">
                            Books
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <!-- CARD STARTS-->
                                <div class="col-lg-3 mb-xl-0 mb-2">
                                    <div class="card border-primary text-dark shadow">
                                        <div class="card-body p-3">
                                            <div class="row">
                                                <div class="col-8">
                                                    <div class="numbers">
                                                        <div class="text-sm mb-0 text-uppercase font-weight-bold">
                                                            Total Books
                                                        </div>
                                                        <h5 class="fw-bolder">53000</h5>
                                                    </div>
                                                </div>
                                                <div class="col-4 text-end">
                                                    <div class="text-center rounded-circle">
                                                        <div class="icon icon-shape bg-primary">
                                                            <i class="text-white bi bi-book fs-4"></i>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <!-- CARD ENDS-->
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- BOOKS COUNT ENDS-->
            <!-- STUDENTS COUNT STARTS-->
            <div class="row">
                <div class="col">
                    <div class="card bg-white border-0 my-3">
                        <div class="card-title border-bottom border-2 fw-bold ps-3 py-2">
                            Students
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <!-- CARD STARTS-->
                                <div class="col-lg-3 mb-xl-0 mb-2">
                                    <div class="card border-primary shadow">
                                        <div class="card-body p-3">
                                            <div class="row">
                                                <div class="col-8">
                                                    <div class="numbers">
                                                        <div class="text-sm mb-0 text-uppercase font-weight-bold">
                                                            Total Students
                                                        </div>
                                                        <h5 class="fw-bolder">450</h5>
                                                    </div>
                                                </div>
                                                <div class="col-4 text-end">
                                                    <div class="icon icon-shape bg-primary text-center rounded-circle">
                                                        <i class="text-white bi bi-people fs-4"></i>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <!-- CARD ENDS-->
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- STUDENTS COUNT ENDS-->
            <!-- CHART STARTS -->
            <div class="row">
                <div class="col">
                    <div class="card bg-white border-0 my-3">
                        <div class="card-title border-bottom border-2 fw-bold ps-3 py-2">
                            Charts
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <!-- CHART STARTS -->
                                <div class="col-sm-12 col-md-6">
                                    <div class="card p-3 shadow">
                                        <div class="card-header bg-white">
                                            Weekly Chart
                                        </div>
                                        <canvas id="weekchart"></canvas>
                                    </div>
                                </div>
                                <!-- CHART ENDS -->
                                <!-- CHART STARTS -->
                                <div class="col-sm-12 col-md-6">
                                    <div class="card p-3 shadow">
                                        <div class="card-header bg-white">
                                            Weekly Chart
                                        </div>
                                        <canvas id="bookchart"></canvas>
                                    </div>
                                </div>
                                <!-- CHART ENDS -->
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- CHART ENDS -->
            <!-- TABLE STARTS -->
            <div class="row">
                <div class="col">
                    <div class="card p-3 bg-white border-0 my-3">
                        <table id="myTable" class="table table-striped">
                            <thead>
                                <tr>
                                    <th>Column 1</th>
                                    <th>Column 1</th>
                                    <th>Column 2</th>
                                    <th>Column 2</th>
                                    <th>Column 2</th>
                                    <th>Column 2</th>
                                    <th>Column 2</th>
                                    <th>Column 2</th>
                                    <th>Column 2</th>
                                    <th>Column 2</th>
                                    <th>Column 2</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>Row 1 Data 1</td>
                                    <td>Row 1 Data 1</td>
                                    <td>Row 1 Data 1</td>
                                    <td>Row 1 Data 1</td>
                                    <td>Row 1 Data 1</td>
                                    <td>Row 1 Data 1</td>
                                    <td>Row 1 Data 1</td>
                                    <td>Row 1 Data 2</td>
                                    <td>Row 1 Data 2</td>
                                    <td>Row 1 Data 2</td>
                                    <td>Row 1 Data 2</td>
                                </tr>
                                <tr>
                                    <td>Row 2 Data 1</td>
                                    <td>Row 2 Data 1</td>
                                    <td>Row 2 Data 1</td>
                                    <td>Row 2 Data 1</td>
                                    <td>Row 2 Data 1</td>
                                    <td>Row 2 Data 1</td>
                                    <td>Row 2 Data 1</td>
                                    <td>Row 2 Data 2</td>
                                    <td>Row 2 Data 2</td>
                                    <td>Row 2 Data 2</td>
                                    <td>Row 2 Data 2</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <!-- TABLE ENDS -->
        </div>
    </main>
    <!-- MAIN ENDS -->

    <%-include("partials/footer")%>
    
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js"
        integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r"
        crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js"
        integrity="sha384-0pUGZvbkm6XF6gxjEnlmuGrJXVbNuzT9qBBavbLwCsOGabYfZo0T0to5eqruptLy"
        crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js"
        integrity="sha512-v2CJ7UaYy4JwqLDIrZUI/4hqeoQieOmAZNXBeQyjo21dadnwR+8ZaIJVT8EE2iyI61OV8e6M8PP2/4hpQINQ/g=="
        crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <script src="https://cdn.datatables.net/2.1.4/js/dataTables.js"></script>
    <script src="https://cdn.datatables.net/responsive/3.0.2/js/dataTables.responsive.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="script.js"></script>
</body>

</html>