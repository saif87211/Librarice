<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="style.css">
    <title>Login</title>
</head>

<body class="split-background">
    <main class="d-flex min-vh-100 flex-row align-items-center justify-content-center">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-6">
                    <div class="card px-3 rounded-0 shadow border border-3">
                        <!-- LOGIN FORM STARTS -->
                        <form id="login-form" method="post" action="/login" class="card-body needs-validation"
                            novalidate>
                            <h2 class="card-title text-decoration-underline text-center">Login</h2>
                            <p class="card-text">Login using email and password</p>

                            <!-- EMAIL FIELD -->
                            <div class="form-floating mb-3">
                                <input id="email" name="email" type="text" pattern="^[^@]+@[^@]+\.[^@]+$" class="form-control rounded-0 shadow"
                                    placeholder="Email" required />
                                <label for="email">Email</label>
                                <div class="invalid-feedback">Email id is required.</div>
                            </div>

                            <!-- PASSWORD FIELD -->
                            <div class="form-floating mb-3">
                                <input id="password" name="password" type="password" pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[a-zA-Z]).{8,}$"
                                    class="form-control rounded-0 shadow" placeholder="Password" required />
                                <label for="password">Password</label>
                                <div class="invalid-feedback">Password is required.</div>
                            </div>

                            <div class="d-flex justify-content-between">
                                <a href="#" class="d-block card-link">Forget password</a>
                                <a href="/register" class="d-block card-link">New user? register here</a>
                            </div>
                            <!-- SUBMIT BUTTON -->
                            <div class="d-grid gap-2 mt-3">
                                <button id="submit-btn" class="btn btn-primary rounded-0 d-flex justify-content-center"
                                    type="submit">Login </button>
                            </div>
                        </form>
                        <!-- LOGIN FORM ENDS -->
                    </div>
                </div>
            </div>
        </div>
    </main>
    <% const {data} = apiResponse;  %>
    <% if(data.alert){%>
        <!--- SWEET ALERT --->
        <template id="alert-template">
            <swal-title><%=data.title%></swal-title>
            <swal-html><p><%=data.message%></p></swal-html>
           <swal-icon type="<%=(apiResponse.success)?'success':'error'%>"></swal-icon>
            <swal-button type="confirm">Okay</swal-button>
        </template>
        <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
        <script>
            Swal.fire({
                template: "#alert-template"
            });
        </script>
        <!--- SWEET ALERT --->
    <%}%>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js"
        integrity="sha384-0pUGZvbkm6XF6gxjEnlmuGrJXVbNuzT9qBBavbLwCsOGabYfZo0T0to5eqruptLy"
        crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js"
        integrity="sha512-v2CJ7UaYy4JwqLDIrZUI/4hqeoQieOmAZNXBeQyjo21dadnwR+8ZaIJVT8EE2iyI61OV8e6M8PP2/4hpQINQ/g=="
        crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <script src="script.js"></script>
</body>

</html>