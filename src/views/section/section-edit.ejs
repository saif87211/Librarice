<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Section</title>
    <!-- BOOTSTRAP -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <!-- BOOTSTRAP ICONS -->
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css"
    />
    <!-- DATATABLES CSS -->
    <link
      href="https://cdn.datatables.net/v/dt/dt-2.1.5/b-3.1.2/b-html5-3.1.2/b-print-3.1.2/r-3.0.3/sb-1.8.0/sp-2.3.2/sl-2.0.5/datatables.min.css"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="../style.css" />
  </head>
  <body>
    <%-include("../partials/header")%>

    <!-- MAIN BODY STARTS -->
    <main class="split-background">
      <div class="container min-vh-80">
        <div class="row justify-content-center">
          <div class="col-lg-9">
            <div class="card bg-white rounded-0 shadow my-4">
              <h5 class="card-header py-3">Edit Section</h5>
              <div class="card-body bg-secondary-subtle p-4">
                <% const {section} = apiResponse.data  %>
                <!-- FORM -->
                <form
                  id="editSection"
                  method="post"
                  action="/section/"
                  class="needs-validation"
                  novalidate
                >
                  <div class="row g-3">
                    <div class="col-md">
                      <!-- STUDENT NAME FIELD -->
                      <div class="form-floating mb-3">
                        <input type="hidden" name="sectionId" value="<%=section._id%>">
                        <input
                          id="section"
                          name="section"
                          class="form-control rounded-0 shadow shadow"
                          type="text"
                          placeholder="Section Name"
                          value="<%=section.name%>"
                          required
                        />
                        <label for="stuname">Section Name</label>
                        <div class="invalid-feedback">
                          Section name is required
                        </div>
                      </div>
                    </div>
                  </div>
                  <!-- SUBMIT BUTTON -->
                  <div class="d-grid gap-2 mt-3">
                    <button class="btn btn-primary rounded-0" type="submit">
                      Update Section
                    </button>
                  </div>
                </form>
              </div>
            </div>
          </div>
        </div>
      </div>
    </main>
    <!-- MAIN BODY ENDS -->

    <%-include("../partials/footer")%>

    <% const {data} = apiResponse; %>
    <% if(data.alert){%>
      <template id="alert-template">
        <swal-title><%=data.title%></swal-title>
        <swal-html><p><%=data.message%></p></swal-html>
        <swal-icon type="<%=(apiResponse.success)?'success':'error'%>"></swal-icon>
        <swal-button type="confirm">Okay</swal-button>
      </template>
      <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
        <script>
            Swal.fire({
                template: "#alert-template"
            });
        </script>
        <!--- SWEET ALERT --->
      <%}%>
    <!-- POPPER JS SCRIPT -->
    <script
      src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js"
      integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r"
      crossorigin="anonymous"
    ></script>
    <!-- BOOTSTRAP SCRIPT -->
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js"
      integrity="sha384-0pUGZvbkm6XF6gxjEnlmuGrJXVbNuzT9qBBavbLwCsOGabYfZo0T0to5eqruptLy"
      crossorigin="anonymous"
    ></script>
    <!-- JQUERY SCRIPT -->
    <script
      src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js"
      integrity="sha512-v2CJ7UaYy4JwqLDIrZUI/4hqeoQieOmAZNXBeQyjo21dadnwR+8ZaIJVT8EE2iyI61OV8e6M8PP2/4hpQINQ/g=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    ></script>
    <!-- DATATABLES SCRIPT -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.2.7/vfs_fonts.js"></script>
    <script src="https://cdn.datatables.net/v/dt/dt-2.1.5/b-3.1.2/b-html5-3.1.2/b-print-3.1.2/r-3.0.3/sb-1.8.0/sp-2.3.2/sl-2.0.5/datatables.min.js"></script>
    <script src="./script.js"></script>
  </body>
</html>
