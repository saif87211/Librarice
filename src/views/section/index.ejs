<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Section</title>
    <!-- BOOTSTRAP -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <!-- BOOTSTRAP ICONS -->
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css"
    />
    <!-- DATATABLES CSS -->
    <link
      href="https://cdn.datatables.net/v/dt/dt-2.1.5/b-3.1.2/b-html5-3.1.2/b-print-3.1.2/r-3.0.3/sb-1.8.0/sp-2.3.2/sl-2.0.5/datatables.min.css"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="../style.css" />
  </head>
  <body>
    <%-include("../partials/header")%>

    <!-- MAIN BODY STARTS -->
    <main class="split-background">
      <div class="container">
        <div class="row justify-content-center">
          <div class="col-lg-10">
            <div class="card bg-white rounded-0 shadow my-4">
              <h5 class="card-header py-3">Add Section</h5>
              <div class="card-body bg-secondary-subtle p-4">
                <!-- FORM -->
                <form
                  id="editSection"
                  method="post"
                  action="/section"
                  class="needs-validation"
                  novalidate
                >
                  <div class="row g-3">
                    <div class="col-md">
                      <!-- STUDENT NAME FIELD -->
                      <div class="form-floating mb-3">
                        <input
                          id="section"
                          name="section"
                          class="form-control rounded-0 shadow shadow"
                          type="text"
                          placeholder="Section Name"
                          required
                        />
                        <label for="stuname">Section Name</label>
                        <div class="invalid-feedback">
                          Section name is required
                        </div>
                      </div>
                    </div>
                  </div>
                  <!-- SUBMIT BUTTON -->
                  <div class="d-grid gap-2 mt-3">
                    <button class="btn btn-primary rounded-0" type="submit">
                      Add Section
                    </button>
                  </div>
                </form>
              </div>
            </div>
          </div>
          <div class="row justify-content-center">
            <div class="col">
              <div class="card bg-white rounded-0 shadow my-4">
                <h5 class="card-header py-3">Classes</h5>
                <div class="card-body p-4">
                  <table
                    id="classTable"
                    class="table table-bordered table-hover table-striped"
                    >
                    <thead>
                      <tr>
                        <th scope="col">Sr No.</th>
                        <th scope="col">Sections</th>
                        <th scope="col">Edit or Delete</th>
                      </tr>
                    </thead>
                    <tbody>
                      <% const {sections} = apiResponse.data; %>
                      <% for(let i = 0; i < sections.length; i++){%>
                        <tr id="" class="">
                          <th><%=i+1%>.</th>
                          <td><%=sections[i].name%></td>
                          <td class="d-flex column-gap-1">
                            <form method="post" action="/section/section-edit">
                              <input type="hidden" name="id" value="<%=sections[i]._id%>">
                              <button
                                type="submit"
                                class="btn btn-sm btn-primary rounded-circle"
                              >
                                <i class="bi bi-pencil"></i>
                              </button>
                            </form>
                            <form class="delete-form" method="post" action="/section/delete">
                              <input type="hidden" name="id" value="<%=sections[i]._id%>">
                              <button
                                type="submit"
                                class="btn btn-sm btn-danger rounded-circle"                                
                                >
                                <i class="bi bi-trash"></i>
                              </button>
                          </form>
                          </td>
                        </tr>  
                      <%} %>
                    </tbody>
                  </table>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </main>
    <!-- MAIN BODY ENDS -->

    <%-include("../partials/footer")%>

    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <% const {data} = apiResponse; %>
    <% if(data.alert){%>
      <template id="alert-template">
        <swal-title><%=data.title%></swal-title>
        <swal-html><p><%=data.message%></p></swal-html>
        <swal-icon type="<%=(apiResponse.success)?'success':'error'%>"></swal-icon>
        <swal-button type="confirm">Okay</swal-button>
      </template>
        <script>
            Swal.fire({
                template: "#alert-template"
            });
        </script>
        <!--- SWEET ALERT --->
      <%}%>
   <!-- BOOTSTRAP SCRIPT -->
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js"
      integrity="sha384-0pUGZvbkm6XF6gxjEnlmuGrJXVbNuzT9qBBavbLwCsOGabYfZo0T0to5eqruptLy"
      crossorigin="anonymous"
    ></script>
    <!-- JQUERY SCRIPT -->
    <script
      src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js"
      integrity="sha512-v2CJ7UaYy4JwqLDIrZUI/4hqeoQieOmAZNXBeQyjo21dadnwR+8ZaIJVT8EE2iyI61OV8e6M8PP2/4hpQINQ/g=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    ></script>
    <!-- DATATABLES SCRIPT -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.2.7/vfs_fonts.js"></script>
    <script src="https://cdn.datatables.net/v/dt/dt-2.1.5/b-3.1.2/b-html5-3.1.2/b-print-3.1.2/r-3.0.3/sb-1.8.0/sp-2.3.2/sl-2.0.5/datatables.min.js"></script>
    <script src="../script.js"></script>
    <script>
      $(".delete-form").on("submit", function (e) {
        e.preventDefault();
        Swal.fire({
          title: "Are sure you want to delete this entry?",
          icon:"warning",
          showCancelButton:true,
          confirmButtonColor: "#3085d6",
          cancelButtonColor: "#d33",
        }).then((result)=>{
          if(result.isConfirmed) this.submit();
          else e.preventDefault();
        });
      });
      
    </script>
  </body>
</html>
